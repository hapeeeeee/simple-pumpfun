{
  "compilerOptions": {
    "target": "ES2020",        // 编译目标
    "module": "esnext",        // 使用 ES 模块
    "moduleResolution": "node", // 模块解析策略
    "esModuleInterop": true,   // 允许使用 ES 模块互操作性
    "strict": true,            // 启用严格模式
    "skipLibCheck": true,      // 跳过库文件检查
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,  // 启用JSON模块支持
  },
  "include": [
    "client2.ts"              // 需要编译的 TypeScript 文件
  ],
  "exclude": [
    "node_modules"             // 排除 node_modules 文件夹
  ]
}
